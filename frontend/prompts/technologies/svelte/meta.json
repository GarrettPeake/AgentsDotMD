{
  "name": "Svelte",
  "description": "A compiler-based UI framework that shifts work from the browser to the build step",
  "icon": "svelte.svg",
  "categories": ["frontend"],
  "options": [
    {
      "id": "variant",
      "label": "Variant",
      "type": "single-select",
      "choices": [
        { "id": "sveltekit", "label": "SvelteKit", "default": true },
        { "id": "svelte", "label": "Svelte (standalone)" }
      ]
    },
    {
      "id": "language",
      "label": "Language",
      "type": "single-select",
      "choices": [
        { "id": "typescript", "label": "TypeScript", "default": true },
        { "id": "javascript", "label": "JavaScript" }
      ]
    },
    {
      "id": "use-testing",
      "label": "Include Testing Conventions",
      "type": "toggle",
      "default": true
    },
    {
      "id": "project-name",
      "label": "Project Name",
      "type": "freeform",
      "default": "my-svelte-app",
      "placeholder": "e.g., my-svelte-app"
    }
  ],
  "templates": [],
  "gitignore": [
    "node_modules/",
    ".svelte-kit/",
    "build/",
    ".env",
    ".env.local",
    ".DS_Store"
  ],
  "incompatibleWith": [],
  "combinationsWith": []
}
